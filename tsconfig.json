{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true, //对于没有export的库进行兼容
        "jsx":"preserve",
        "jsxFactory": "h",
        "strict": false, //严格模式
        "experimentalDecorators": true, //开启修饰者模式
        "target": "es5", //选择输出es版本
        "allowJs": true,
        "module": "esnext", //采用的系统模块
        "moduleResolution": "node", //如何处理模块
        "isolatedModules": true,
        "emitDecoratorMetadata": true,
        "lib": [ //识别基本的系统类库
            "dom",
            "es5",
            "es6",
            "es7",
            "esnext",
            "es2015"
        ],
        "sourceMap": true,
        "pretty": true
    }
}